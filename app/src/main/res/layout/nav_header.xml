<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/nav_header_padding"
    android:background="@color/nav_header_bg_color">

    <ImageView
        android:layout_width="@dimen/nav_header_img_dimens"
        android:layout_height="@dimen/nav_header_img_dimens"
        android:src="@drawable/heart"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/nav_header_title_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dev_email"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/nav_header_title_size"/>

</LinearLayout>